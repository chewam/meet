div.pagination
    ul
        - if (pageIndex - 1 > 0)
            li.prev: a(href="/search?pageIndex=" + (pageIndex - 1)) &larr; Previous
        - else
            li.prev.disabled: a(href="/search?pageIndex=" + (pageIndex - 1)) &larr; Previous
        - for (var i = 1; i < pageCount; i++)
            - if (i === pageIndex)
                li.active: a(href="/search?pageIndex=" + i) #{i}
            - else
                li: a(href="/search?pageIndex=" + i) #{i}
        - if (pageIndex < pageCount - 1)
            li.next: a(href="/search?pageIndex=" + (pageIndex + 1)) Next &rarr;
        - else
            li.next.disabled: a(href="/search?pageIndex=" + (pageIndex + 1)) Next &rarr;


div.items
    for item in items
        div.item.row
            div.span2
                div.media-grid
                    a(href="/profile/" + item.get('_id'))
                        img.thumbnail(src="#{item.get('pic')}", height="90px", width="90px")
            div.span11

                - var flash = false;
                - for (var i = 0, l = user.flashed.length; i < l; i++)
                    - if (user.flashed[i].user == item.get('_id'))
                        - flash = user.flashed[i];
                - if (flash)
                    button.btn.disabled.pull-right(rel='twipsy', data-original-title='Last flash: ' + flash.date) Flash
                - else
                    button.btn.pull-right(data-complete-text="Flash", data-bind="click: function(e) { flash(e.target, '" + item.get('_id') + "'); }") Flash

                button.btn.pull-right.info(data-bind="click: function() { write('" + item.get('_id') + "', '" + item.get('login') + "'); }") Write
                button.btn.pull-right.success(data-bind="click: function() { save('" + item.get('_id') + "'); }") Save
                h3.page-header: a(href="/profile/" + item.get('_id')) #{item.get('login')}
                div #{item.get('email')}
                div
                    include lorem-small

    script
        $('button[rel="twipsy"]').twipsy({live: true});


