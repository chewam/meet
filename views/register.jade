div
    form.form-vertical(action="", method="POST")
        fieldset
            legend Create an account
            div.control-group
                label(for="gender") Gender
                div.controls
                    select(name="gender")
                        option(value="m") a man looking for a woman
                        option(value="f") a woman looking for a man
                        option(value="f") a woman looking for a woman
                        option(value="m") a man looking for a man

            div.control-group
                label(for="range") Range
                    div.controls
                        div.form-inline
                            select.span2(name="range1")
                                option 20
                                option 30
                                option 40
                                option 50
                            |&nbsp;
                            select.span2(name="range2")
                                option 20
                                option 30
                                option 40
                                option 50

            div.control-group
                label(for="birthday") Birthday
                    div.controls
                        div.form-inline
                            input.span1(placeholder="DD")
                            |&nbsp;
                            input.span1(placeholder="MM")
                            |&nbsp;
                            input.span2(placeholder="YYYY")

            div.control-group
                label(for="country") Country
                div.controls
                    select(name="country")
                        option france
                        option us
                        option england
                        option spain

            div.control-group
                label(for="city") City
                div.controls
                    input#city.xlarge(type="text", name="city", value="Paris")

            div.control-group
                label(for="zipcode") Zip code
                div.controls
                    input#zipcode.xlarge(type="text", name="zipcode", value="75006")

            div.control-group
                label(for="login") Login
                div.controls
                    input#login.xlarge(type="text", size="30", name="login")
            div.control-group
                label(for="password") Password
                div.controls
                    input#password.xlarge(type="password", size="30", name="password")
            div.control-group
                label(for="password2") Password
                div.controls
                    input#password2.xlarge(type="password", size="30", name="password2")

            div.control-group
                label(for="email") Email
                div.controls
                    input#email.xlarge(type="text", name="email", value="gary@chewam.com")

        div.actions
            button.btn.primary(type="submit") Submit
