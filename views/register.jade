form#register-form.register.form-vertical(action="", method="POST")
    div.box
        h3.thin.page-header Create an account
        div.box-inner
            div.row
                div.span4
                    div.control-group
                        div.controls
                            div.input-prepend
                                span.add-on
                                    i.icon-user
                                input#login.required(type="text", size="30", name="login", placeholder="Login", tabindex="4")
                                span.help-inline.input-loader
                    div.control-group
                        div.controls
                            div.input-prepend
                                span.add-on
                                    i.icon-envelope
                                input(type="text", name="email", placeholder="Email", tabindex="5")
                                span.help-inline.input-loader
                    div.control-group
                        div.controls
                            div.input-prepend
                                span.add-on
                                    i.icon-lock
                                input(type="password", size="30", name="password", placeholder="Password", tabindex="6")
                    div.control-group
                        div.controls
                            div.input-prepend
                                span.add-on
                                    i.icon-lock
                                input(type="password", size="30", name="password2", placeholder="Confirm password", tabindex="7")

                    hr

                    div.control-group
                        div.controls
                            div.input-prepend
                                span.add-on
                                    i.icon-search
                                select(name="gender", tabindex="8")
                                    option(value="1") a man looking for a woman
                                    option(value="2") a woman looking for a man
                                    option(value="3") a woman looking for a woman
                                    option(value="4") a man looking for a man

                    div.control-group
                        label.control-label(for="range1") Range
                        div.controls
                            div.form-inline
                                div.input-prepend
                                    span.add-on
                                        i.icon-minus
                                    select.input-mini(name="range1", placeholder="min", tabindex="9")
                                        - for (var i = 18, l = 100; i <= l; i++)
                                            - if (i == 25)
                                                option(selected="selected") #{i}
                                            - else
                                                option #{i}

                                |&nbsp;
                                div.input-prepend
                                    span.add-on
                                        i.icon-plus
                                    select.span1(name="range2", placeholder="max", tabindex="10")
                                        - for (var i = 18, l = 100; i <= l; i++)
                                            - if (i == 45)
                                                option(selected="selected") #{i}
                                            - else
                                                option #{i}

                    div.control-group
                        label.control-label(for="birthday-day") Birthday
                        div.controls
                            div.form-inline
                                div.input-prepend
                                    span.add-on
                                        i.icon-calendar
                                    select.span1(name="birthday-day", placeholder="DD", tabindex="11")
                                        - var option;
                                        - for (var i = 1, l = 31; i <= l; i++)
                                            - option = {text: (i < 10 ? '0' : '') + i, value: i}
                                            option(value="#{option.value}") #{option.text}

                                |&nbsp;
                                select.span1(name="birthday-month", placeholder="MM", style="width: 100px", tabindex="12")
                                    option(value="1") Janvier
                                    option(value="2") Fevrier
                                    option(value="3") Mars
                                    option(value="4") Avril
                                    option(value="5") Mai
                                    option(value="6") Juin
                                    option(value="7") Juillet
                                    option(value="8") Aout
                                    option(value="9") Septembre
                                    option(value="10") Octobre
                                    option(value="11") Novembre
                                    option(value="12") Decembre

                                |&nbsp;
                                select.span1(name="birthday-year", placeholder="YYYY", tabindex="13")
                                    - var year = (new Date()).getFullYear();
                                    - for (var i = year-18, l = year-100+18; i >= l; i--)
                                        option(value="#{i}") #{i}


                div.span5
                    div#map-canvas
                    br
                    div.control-group
                        div.controls
                            div.input-prepend
                                span.add-on
                                    i.icon-map-marker
                                input#location.span4(type="text", name="location", data-provide="typeahead", data-source='["toto","titi","tutu"]', placeholder="Location", tabindex="14")
                                span.help-inline.input-loader
                    ul#location-details
                        li Country:
                        li City:
                        li Zip Code:

        div.form-actions
            span.form-loader Loading...
            button.btn.btn-primary.pull-right(type="button", tabindex="15") REGISTER
            div(style="clear: both")
